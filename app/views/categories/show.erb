<head>
  <title>Lendr - <%= @category.name %></title>
</head>

<body>
  <h1 class = "category_index" id = "category">All <%=@category.name%>: </h1>

  <div class="ui placeholder segment">

    <div class = "ui segments">
      <% @category.debts.each do |debt|%>
        <div class = "ui blue segment">
          <h4 id = "lists" class = "category_index"> Debtee: <%= debt.user.name %> <br>
          <%= link_to(debt.title, debt_path(debt)) %> <br>
          <%= debt.amount %> <br>
          <% if debt.user.id != current_user.id %>
          <%= button_to "Donate", new_payment_path, method: :get, params: { debt_id: debt.id } %> </h4>
          <% end %>
          </div>
      <% end %>
    </div>
  </div>
</body>
