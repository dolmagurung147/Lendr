<head>
  <title>Lendr - <%= @user.username %></title>
</head>

<h1><%= @user.username %> Info: </h1>
<%= image_tag(@user.image_url.to_s) %>
<h3>Name: </h3>
 <p><%= @user.name %></p><br>
<h3>Email: </h3>
 <p><%= @user.email %></p><br>
<h3>Date of Birth </h3>
<p><%= @user.date_of_birth.strftime("%B-%d-%Y") %></p>
 <h3><%= @user.name %>'s Debts</h3>
 <ul>
   <% @user.debts.each do |debt| %>
     <li><%= link_to(debt.title, debt_path(debt))%> - $<%=debt.amount%></li>
   <% end %>
 </ul><br>
 <%= button_to "Create New Debt", new_debt_path, method: :get  %>
 <h3>Debt Total: </h3> <%= "$#{@user.total}" %>
<% if current_user.id == @user.id %>
  <%= button_to("Delete Account", user_path(@user), :method => :delete, :data => {confirm: "Are you sure you want to delete your account?"}) %>
  <%= button_to("Edit Account", edit_user_path(@user), :method => :get) %>
  <% if logged_in? %>
  <%= button_to "Logout", sessions_path, method: :delete %>
  <% end %>
<% end %>

<br>

<h3>Reimbursements</h3>

<ol>
<% @user.all_reimbursements.each do |reimbursement| %>
<li><%= reimbursement.debt.title %> <%= button_to "REIMBURSE", "/payments/#{reimbursement.id}", method: :delete %></li>
<ul>
  <li><%= reimbursement.user.name %></li>
  <li><%= reimbursement.payment_amount %></li>

</ul>
<% end %>
</ol>

  <h3> All Debts that I've Helped </h3>
<ul>
    <% @user.all_debts_associated_with_donation.each do |debt| %>
    <li><%= debt.title %></li>
    <%end %>

</ul>
