<h1>Sign-Up</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
  <%= error %>
  <% end %>
<% end %>

<%= form_for(@user) do |f| %>
<%= f.label :username %>
<%= f.text_field :username %><br><br>
<%= f.label :password %>
<%= f.password_field :password %>
<%= f.label :email %>
<%= f.text_field :email %><br><br>
<%= f.label :name %>
<%= f.text_field :name %><br><br>
<%= f.label :date_of_birth %>
<%= f.date_field :date_of_birth %><br><br>
<%= f.submit %>
<% end %>
