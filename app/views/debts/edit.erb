<h1> DEBT FORM </h1>

<%= form_for @debt do |f| %>
  <%= f.label "USERNAME: " %>
  <%= f.collection_select(:user_id, User.all, :id, :name) %> <br>
  <%= f.label "categories" %>
  <%= f.collection_select(:category_id, Category.all, :id, :name) %>
  <%= f.label "Amount: " %>
  <%= f.number_field :amount %>
  <%= f.label "Story: " %>
  <%= f.text_field :story %>
  <%= f.label "Due Date: " %>
  <%= f.datetime_field :due_date %>
  <%= f.label "Payback? :" %>
  <%= f.check_box :duedate %>
  <%= f.submit %>
<% end %>
