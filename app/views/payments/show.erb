<head>
  <title>Lendr - Payment</title>
</head>

<body>

  <div class="ui placeholder segment" id = "payments">
    <h1><%= @payment.user.name %>'s Payment</h1>

    <h3>Debt:</h3>
    <%= @payment.debt.user.name %>
    <%= @payment.debt.title %>

    <h3>Payment Total:</h3>
    <%= @payment.payment_amount %>

    <h3>Comment:</h3>
    <p><%= @payment.comment %> </p>

    <%= button_to("Delete Payment", payment_path(@payment), :method => :delete, :data => {confirm: "Are you sure you want to delete this payment?"}, class: "ui negative button") %>

  </div>
</body>
