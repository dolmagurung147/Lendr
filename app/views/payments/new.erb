<h1>New Payment:</h1>

<%= form_for(@payment) do |f| %>
  <%= f.label :user %>
  <%= f.collection_select(:user_id, User.all, :id, :name, prompt: true) %>
  <%= f.label :debt %>
  <%= f.collection_select(:debt_id, Debt.all, :id, :title, prompt: true) %>
  <%= f.label :payment_amount, "Payment Amount" %>
  <%= f.number_field :payment_amount %>
  <%= f.label :comment %>
  <%= f.text_area :comment %>
  <%= f.submit %>
<% end %>
