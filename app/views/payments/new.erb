<head>
  <title>Lendr - New Payment</title>
</head>

<h1>New Payment:</h1>

<% if flash[:errors] %>
  <p><%= flash[:errors] %></p>
<% end %>

<%= form_for(@payment) do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :debt_id, value: @debt.id %>
  <%= f.label :payment_amount, "Payment Amount" %>
  <%= f.number_field :payment_amount %>
  <%= f.label :comment %>
  <%= f.text_area :comment %>
  <%= f.submit %>
<% end %>
